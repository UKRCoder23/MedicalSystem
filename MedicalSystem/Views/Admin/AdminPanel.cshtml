@model IEnumerable<MedicalSystem.Models.Doctor>

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>Панель адміністратора</title>
</head>
<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark shadow-sm mb-4">
        <div class="container">
            <span class="navbar-brand fw-bold">Admin Panel</span>
            <a href="/" class="btn btn-outline-light btn-sm">На головну</a>
        </div>
    </nav>

    <div class="container">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold text-primary">Керування лікарями</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Лікар</th>
                                <th>Контакти</th>
                                <th>Статус</th>
                                <th class="text-end pe-4">Дії</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doctor in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@doctor.LastName @doctor.FirstName</div>
                                        <small class="text-muted">ID: @doctor.Id</small>
                                    </td>
                                    <td>
                                        <div>@doctor.Email</div>
                                        <small class="text-muted">@doctor.PhoneNumber</small>
                                    </td>
                                    <td>
                                        @if (doctor.IsApproved)
                                        {
                                            <span class="badge rounded-pill bg-success-subtle text-success border border-success">
                                                <i class="bi bi-check-circle-fill me-1"></i> Підтверджений
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-warning-subtle text-warning-emphasis border border-warning">
                                                <i class="bi bi-clock-history me-1"></i> Очікує
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            @if (!doctor.IsApproved)
                                            {
                                                <form asp-action="ApproveDoctor" method="post">
                                                    <input type="hidden" name="id" value="@doctor.Id" />
                                                    <button type="submit" class="btn btn-success btn-sm px-3">
                                                        Підтвердити
                                                    </button>
                                                </form>
                                            }
                                            
                                            <form asp-action="DeleteDoctor" method="post" onsubmit="return confirm('Ви впевнені, що хочете видалити цього лікаря?')">
                                                <input type="hidden" name="id" value="@doctor.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5 text-muted">
                                        Лікарів поки немає в базі даних.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
</html>