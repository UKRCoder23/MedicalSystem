@using MedicalSystem.Models
@model dynamic 
@{
    var doctors = Model as IEnumerable<MedicalSystem.Models.Doctor>;
}

@functions {
    string TranslateDay(DayOfWeek day) => day switch
    {
        DayOfWeek.Monday => "Пн",
        DayOfWeek.Tuesday => "Вт",
        DayOfWeek.Wednesday => "Ср",
        DayOfWeek.Thursday => "Чт",
        DayOfWeek.Friday => "Пт",
        DayOfWeek.Saturday => "Сб",
        DayOfWeek.Sunday => "Нд",
        _ => day.ToString()
    };
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>Панель адміністратора</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <span class="navbar-brand fw-bold">Admin Panel</span>
            <a href="/" class="btn btn-outline-light btn-sm">На головну</a>
        </div>
    </nav>

    <div class="container-fluid px-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold text-primary">Керування лікарями та графіками</h5>
            </div>
            <div class="card-body p-0">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 20%">Лікар</th>
                            <th style="width: 45%">Налаштувати робочі дні</th>
                            <th style="width: 20%">Час (З - До)</th>
                            <th style="width: 15%" class="text-end">Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (doctors != null)
                        {
                            @foreach (var doctor in doctors)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@doctor.LastName @doctor.FirstName</div>
                                        @if (doctor.IsApproved) {
                                            <span class="badge bg-success-subtle text-success">Підтверджений</span>
                                        } else {
                                            <span class="badge bg-warning-subtle text-warning">Очікує</span>
                                        }
                                    </td>

                                    <td colspan="2">
                                        <form asp-action="SetSchedule" method="post" class="row g-2 align-items-center">
                                            <input type="hidden" name="doctorId" value="@doctor.Id" />
                                            
                                            <div class="col-8">
                                                <div class="d-flex flex-wrap gap-2">
                                                    @foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)))
                                                    {
                                                        var isWorkDay = doctor.Schedules?.Any(s => s.Day == day) ?? false;
                                                        <div class="form-check form-check-inline m-0">
                                                            <input class="form-check-input" type="checkbox" name="selectedDays" 
                                                                   value="@day" id="d-@doctor.Id-@day" @(isWorkDay ? "checked" : "")>
                                                            <label class="form-check-label small" for="d-@doctor.Id-@day">@TranslateDay(day)</label>
                                                        </div>
                                                    }
                                                </div>
                                            </div>

                                            <div class="col-3">
                                                <div class="input-group input-group-sm">
                                                    <input type="time" name="start" class="form-control" value="09:00" required>
                                                    <input type="time" name="end" class="form-control" value="18:00" required>
                                                </div>
                                            </div>

                                            <div class="col-1 text-end">
                                                <button type="submit" class="btn btn-primary btn-sm">Зберегти</button>
                                            </div>
                                        </form>
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-1">
                                            @if (!doctor.IsApproved)
                                            {
                                                <form asp-action="ApproveDoctor" method="post">
                                                    <input type="hidden" name="id" value="@doctor.Id" />
                                                    <button type="submit" class="btn btn-success btn-sm">Підтвердити</button>
                                                </form>
                                            }

                                            <form asp-action="DeleteDoctor" method="post" onsubmit="return confirm('Видалити?')">
                                                <input type="hidden" name="id" value="@doctor.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">Видалити</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>