@model IEnumerable<MedicalSystem.Models.Doctor>

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>Панель адміністратора</title>
</head>
<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark shadow-sm mb-4">
        <div class="container">
            <span class="navbar-brand fw-bold">Admin Panel</span>
            <a href="/" class="btn btn-outline-light btn-sm">На головну</a>
        </div>
    </nav>

    <div class="container mb-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold text-primary">Керування лікарями та графіками</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Лікар</th>
                                <th>Статус</th>
                                <th>Поточний графік</th>
                                <th class="text-end pe-4">Дії</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doctor in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@doctor.LastName @doctor.FirstName</div>
                                        <small class="text-muted">@doctor.Email</small>
                                    </td>
                                    <td>
                                        @if (doctor.IsApproved)
                                        {
                                            <span class="badge bg-success-subtle text-success">Підтверджений</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning-subtle text-warning">Очікує</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @if (doctor.Schedules.Any())
                                            {
                                                @string.Join(", ", doctor.Schedules.Select(s => s.Day.ToString().Substring(0, 2)))
                                            }
                                            else
                                            {
                                                <span>Не встановлено</span>
                                            }
                                        </small>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-1">
                                            <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#scheduleModal-@doctor.Id">
                                                <i class="bi bi-calendar3"></i> Графік
                                            </button>

                                            @if (!doctor.IsApproved)
                                            {
                                                <form asp-action="ApproveDoctor" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@doctor.Id" />
                                                    <button type="submit" class="btn btn-success btn-sm">Підтвердити</button>
                                                </form>
                                            }

                                            <form asp-action="DeleteDoctor" method="post" class="d-inline" onsubmit="return confirm('Видалити?')">
                                                <input type="hidden" name="id" value="@doctor.Id" />
                                                <button type="submit" class="btn btn-link text-danger p-0 ms-2"><i class="bi bi-trash"></i></button>
                                            </form>
                                        </div>

                                        <div class="modal fade" id="scheduleModal-@doctor.Id" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content text-start">
                                                    <form asp-action="SetSchedule" method="post">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Графік: @doctor.LastName</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <input type="hidden" name="doctorId" value="@doctor.Id" />
                                                            
                                                            <label class="form-label fw-bold">Оберіть робочі дні:</label>
                                                            <div class="d-flex flex-wrap gap-2 mb-3">
                                                                @foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)))
                                                                {
                                                                    <div class="form-check form-check-inline">
                                                                        <input class="form-check-input" type="checkbox" name="selectedDays" value="@day" id="day-@doctor.Id-@day">
                                                                        <label class="form-check-label" for="day-@doctor.Id-@day">@day.ToString().Substring(0, 3)</label>
                                                                    </div>
                                                                }
                                                            </div>

                                                            <div class="row">
                                                                <div class="col">
                                                                    <label class="form-label">Початок</label>
                                                                    <input type="time" name="start" class="form-control" value="09:00" required />
                                                                </div>
                                                                <div class="col">
                                                                    <label class="form-label">Кінець</label>
                                                                    <input type="time" name="end" class="form-control" value="18:00" required />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                                                            <button type="submit" class="btn btn-primary">Зберегти графік</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
</html>