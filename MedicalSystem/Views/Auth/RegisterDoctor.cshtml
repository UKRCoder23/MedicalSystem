@model MedicalSystem.Models.ViewModels.RegisterDoctorViewModel

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Реєстрація - MedicalSystem</title>
</head>
    <body class="bg-light">

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6 shadow p-4 rounded bg-light">
                    <h2 class="text-center mb-4">Реєстрація лікаря</h2>
                    
                    <form asp-action="RegisterPatient" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label">Ім'я</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Прізвище</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Спеціалізації</label>
                            <select asp-for="SelectedSpecializationIds" class="form-select" multiple size="3">
                                @foreach (var spec in ViewBag.Specializations)
                                {
                                    <option value="@spec.Id">@spec.NameSpecialization</option>
                                }
                            </select>
                            <small class="text-muted">Затисніть Ctrl, щоб обрати декілька</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Номер телефону</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Стать</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="0">Чоловік</option>
                                <option value="1">Жінка</option>
                                <option value="2">Інше</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Пароль</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Зареєструватися</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>