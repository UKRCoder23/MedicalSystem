@model MedicalSystem.Models.Doctor

        <div class="col-md-3">
            <div class="text-center">
                @if (Model.Photo != null)
                {
                    <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Photo)" 
                        class="img-thumbnail shadow-sm" 
                        style="width: 200px; height: 250px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center border shadow-sm mx-auto" 
                        style="width: 200px; height: 250px;">
                        <span class="text-muted">Немає фото</span>
                    </div>
                }
                
                <div class="mt-3">
                    <h4 class="text-warning">@Model.Rating.ToString("0.0")</h4>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <h1>@Model.FirstName @Model.LastName</h1>
            <p class="text-muted">
                <strong>Спеціалізація:</strong> 
                @if (Model.Specializations != null && Model.Specializations.Any())
                {
                    @string.Join(", ", Model.Specializations.Select(s => s.NameSpecialization))
                }
                else
                {
                    <span>Не вказано</span>
                }
            </p>
            <hr />
            
            <h5>Біографія</h5>
            <p>@(string.IsNullOrEmpty(Model.Biography) ? "Інформація відсутня" : Model.Biography)</p>

            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Кабінет:</strong> @Model.Cabinet</li>
                <li class="list-group-item"><strong>Телефон:</strong> @Model.PhoneNumber</li>
            </ul>

            <div class="mt-4">
                <a asp-action="DoctorSchedules" asp-route-id="@Model.Id" class="btn btn-primary">Записатись на прийом</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
            </div>
        </div>
    </div>
</div>